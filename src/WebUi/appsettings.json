{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "" // Enter your DB connection string.
  },
  "AccessToken": {
    "SecretKey": "", // Enter your secret key.
    "Issuer": "DevToDev.API",
    "Audience": "DevToDev.SPA",
    "ValidityTime": "1"
  },
  "RefreshToken": {
    "ValidityTime": "43200",
    "Length": "60"
  },
  "ConfirmationToken": {
    "Length": "255"
  },
  "Serilog": {
    "Using": [],
    "MinimumLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "System": "Warning"
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId" ],
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "../../logs/log.log",
          "formatter": "Serilog.Formatting.Json.JsonFormatter,Serilog"
        }
      }
    ]
  },
  "AllowedHosts": "*"
}